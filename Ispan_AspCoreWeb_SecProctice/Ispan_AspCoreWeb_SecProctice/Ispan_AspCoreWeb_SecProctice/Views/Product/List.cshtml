@model IEnumerable<Ispan_AspCoreWeb_SecProctice.Models.Product>

@{
    ViewData["Title"] = "List";
}

<h1>產品後台管理</h1>
@using (Html.BeginForm())
{
    @:關鍵字 @Html.TextBox("txtKeyword")
<input type="submit" value="查詢" class="btn btn-primary" />
}
<p>
    <a asp-action="Create">新增產品</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FPhotoPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FPhotoPath)
            </td>
            <td>
                @Html.ActionLink("編輯產品", "Edit", "Product", new {  id=item.FId }) |
                @Html.ActionLink("刪除產品", "Delete","Product", new {  id=item.FId }, new{ onclick="return confirm('確定刪除嗎?');" })
            </td>
        </tr>
}
    </tbody>
</table>
