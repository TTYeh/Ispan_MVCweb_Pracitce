@model IEnumerable<Ispan_AspNetWeb_firstPractice.Products>

@{
    ViewBag.Title = "產品上下架管理";
}

<h2>產品上下架管理</h2>

@using (Html.BeginForm())
{
    @:關鍵字 @Html.TextBox("txtKeyword")
    <input type="submit" value="查詢" class="btn btn-primary" />
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Images/@item.fPhotoPath" width="150" height="150"/>
                <h3>@Html.DisplayFor(modelItem => item.fPhotoPath)</h3>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fPrice)
            </td>
            <td>
                @Html.ActionLink("編輯商品", "Edit", new { id = item.fId }) |
                @Html.ActionLink("下架", "Delete", "Product", new { id = item.fId },
               new { onclick = "return confirm('確定要刪除嗎?')" })
            </td>
        </tr>
    }

</table>
