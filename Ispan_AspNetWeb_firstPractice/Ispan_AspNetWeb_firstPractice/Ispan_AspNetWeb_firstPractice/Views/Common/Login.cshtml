
@{
    ViewBag.Title = "Login";
}

<h2>登入系統</h2>

<div class="form-horizontal">
    <h4>輸入帳號與密碼</h4>
    <hr />

    <input type="hidden" name="txtFID" value="@ViewBag.fid" />
    <div class="form-group">
        <nav>帳號(註冊時的Email)</nav> 
        <div class="col-md-10">
            @Html.TextBox("txtAccount", "", new { htmlAttribute = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <nav>密碼</nav>
        <div class="col-md-10">
            @Html.TextBox("txtPassword", "", new { htmlAttribute = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input type="submit" value="登入" class="btn btn-default" />
        </div>
    </div>
</div>