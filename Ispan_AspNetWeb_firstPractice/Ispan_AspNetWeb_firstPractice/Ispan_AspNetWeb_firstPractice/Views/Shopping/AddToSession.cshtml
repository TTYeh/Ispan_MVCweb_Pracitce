
@{
    ViewBag.Title = "AddToSession";
}

<h2>加入購物車Session</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>輸入購買數量</h4>
        <hr />

        <input type="hidden" name="txtFID" value="@ViewBag.fid" />
        <div class="form-group">
            數量
            <div class="col-md-10">
                @Html.TextBox("txtCount", "1", new { htmlAttribute = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <input type="submit" value="購買" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("取消", "List")
</div>
