@model IEnumerable<Ispan_AspNetWeb_firstPractice.Models.Entity.cShoppingItem>

@{
    ViewBag.Title = "CartView";
}

<h2>CartView</h2>

<p>
    @Html.ActionLink("結帳購物車", "Create")
</p>
<table class="table">
    <tr>
        <th>
            序
        </th>
        <th>
            產品
        </th>
        <th>
            採購量
        </th>
        <th>
            售價
        </th>
        <th>
            小計
        </th>
        <th></th>
    </tr>

    @{
        int count = 0;
        decimal pay = 0;
        decimal tax = 0;
        decimal sum = 0;

        foreach (var item in Model) {
            count++;
            sum += item.小計;

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.product.fName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.小計)
                </td>
                <td>
                    @Html.ActionLink("取消", "Edit", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>

    }

    pay = sum * 1.05M;
    tax = pay - sum;
    }
</table>
<li>交易金額：@sum.ToString("###,###,##0")</li>
<li>稅　　額：@tax.ToString("###,###,##0")</li>
<li>應付金額：@pay.ToString("###,###,##0")</li>
